body
  background-color #181b1d
  font-family "Arvo", serif

  color #fefefe

header
  padding 16px
  font-size 36px
  margin-bottom 16px

#content
  padding 16px

  .item
    display inline-block
    vertical-align top

    text-align center

    padding 16px
    width 300px
    height 300px

    font-size 24px
    line-height 1.5

    &:hover
      cursor pointer

    h1
      margin auto
      position absolute
      width 50%

      top 50%
      left 50%

      -webkit-transform translate(-50%, -50%)

    .points
      position absolute
      left 32px
      bottom 32px

      i
        margin-right 8px
