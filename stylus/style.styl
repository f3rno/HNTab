header
  padding 16px
  font-size 36px
  margin-bottom 16px

  color white
  background-color #ccc

#content
  background url(/img/bg.jpg)
  padding 16px

  font-family "Arvo", serif

  .item
    display inline-block
    vertical-align top

    text-align center

    padding 16px
    width 600px
    height 400px

    border 1px solid #ccc
    background-color #333
    color #fefefe

    font-size 24px
    line-height 1.5

    &:hover
      cursor pointer

    h1
      margin auto
      position absolute
      width 50%

      top 50%
      left 50%

      -webkit-transform translate(-50%, -50%)
