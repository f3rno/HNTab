body
  font-family "ff-tisa-web-pro", serif
  background-color #fefefe
  color #181b1d

  padding 32px

a
  color inherit
  text-decoration none

  &:hover
    cursor pointer

i
  margin-right 8px

header
  font-size 36px
  text-align center
  margin-bottom 32px

  .apps
    float left
    font-size 24px
    line-height 44px

.gutter-sizer
  width 2.33333%

.item, .grid-sizer
  width 23.25%

#content

  .item:before
    content ""
    position absolute
    width 130%
    height 45%
    top -15%
    right -5%
    background -webkit-gradient(linear, left top, left bottom, from(rgba(255,255,255,0.1)), to(rgba(255,255,255,0.3)))

    -webkit-transform rotate(10deg)
    -webkit-border-bottom-left-radius 200px 20px
    -webkit-border-bottom-right-radius 200px 10px
    -webkit-border-top-right-radius 5px 100px

    transform rotate(10deg)
    border-bottom-left-radius 200px 20px
    border-bottom-right-radius 200px 10px
    border-top-right-radius 5px 100px

  .item
    -webkit-perspective 1000

    &:hover .flipper, &.hover .flipper
      -webkit-transform rotateY(180deg)

    .front, .back
      height 300px
      width 100%
      background-color rgba(255, 255, 255, 0.7)

      -webkit-backface-visibility hidden

      position absolute
      top 0
      left 0

    .front
      z-index 2

    .back
      -webkit-transform rotateY(180deg)

    .flipper
      transition 0.6s
      -webkit-transform-style preserve-3d

      position relative

    display inline-block
    vertical-align top
    position relative

    text-align center

    height 300px

    font-size 24px
    line-height 1.5
    background-size cover !important

    border 6px solid #fff
    box-shadow 0 1px 4px #acacac, 0 0 0 1px #dadada

    &.hnHighlight
      box-shadow 0 1px 8px #EBA86B, 0 0 0 1px #DBA87A

    color #333
    overflow hidden

    &:hover
      cursor pointer

    .front
      .title
        font-size 22px
        padding 0 16px
        font-weight 400

      .points
        text-shadow 0 0 2px rgba(0, 0, 0, 0.1)

        font-family "proxima-nova", sans-serif
        font-size 48px
        font-weight 100
        line-height 128px

      .domain
        font-weight 100
        position absolute
        bottom 8px
        width 100%
        text-align center

        font-family proxima-nova
        font-size 16px

    .back
      .link
        font-size 48px
        line-height 300px
        z-index 400

      .comments
        z-index 500
        text-align center

        font-family proxima-nova
        font-size 36px
        font-weight 100

        position absolute
        bottom 8px
        left 0
        width 100%
