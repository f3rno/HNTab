body
  background-color #fefefe
  font-family "Arvo", serif

  color #181b1d

  padding 32px

a
  color inherit
  text-decoration none

header
  font-size 36px
  text-align center
  margin-bottom 32px

  .apps
    float left
    font-size 24px
    line-height 44px

.gutter-sizer
  width 2.33333%

.item, .grid-sizer
  width 23.25%

#content
  .item
    display inline-block
    vertical-align top
    position relative

    text-align center

    height 300px

    font-size 24px
    line-height 1.5
    background-size cover !important

    box-shadow 0 0 8px rgba(0, 0, 0, 0.4)

    color #fefefe
    border-radius 4px

    &:hover
      cursor pointer

    .overlay
      position absolute
      bottom 0
      left 0

      width 100%

      padding 8px 0
      background-color rgba(0, 0, 0, 0.7)

      border-bottom-left-radius 4px
      border-bottom-right-radius 4px

      .title
        font-size 16px
